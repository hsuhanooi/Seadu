<div id="question_<%= question.id %>" class="question">
  <div class="question_body">
    <div class="question_info">
      <span class="question_votes" data-count="<%= question.up_votes.count %>">
        <%= pluralize(question.up_votes.count, "vote") %>
      </span>
      <span class="question_time">
        <%= time_ago_in_words(question.created_at) %> ago
      </span>
    </div>
    <div class="question_content">
      <%= question.content %>
    </div>
  </div>

  <div class="question_vote">
    <%= form_tag(question_vote_path(id: question.id), remote: true) do %>
      <%= hidden_field_tag :vote_type, "up" %>
      <%= submit_tag :vote %>
    <% end %>
  </div>
</div>